{
  "manifest_version": 3,
  "name": "FactCheck AI â€” Free Online",
  "version": "0.1.0",
  "description": "Browser extension that performs online fact-checking without paid APIs.",
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "cookies",
    "webRequest"
  ],
  "host_permissions": [
    "https://*.wikipedia.org/*",
    "https://api.duckduckgo.com/*",
    "https://chat.openai.com/*",
    "https://www.google.com/*",
    "https://www.bing.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "sidepanel/index.html",
    "open_at_install": true
  }
}
